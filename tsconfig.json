{
    "compilerOptions": {
        "outDir": "./lib",
        "target": "es5",
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "./src/**/*.test.tsx",
        "./src/**/*.test.ts",
    ]
}
